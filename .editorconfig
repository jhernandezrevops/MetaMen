# METAMEN100 - EditorConfig
# Mantiene estilos de c√≥digo consistentes entre editores
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{json,jsonc}]
indent_size = 2

[*.sql]
indent_size = 2
